# FLAC Decode Benchmark - ESP-IDF Configuration

# Custom partition table (4MB app partition for large embedded audio)
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# CPU Frequency
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y

# Disable watchdogs for uninterrupted benchmark
CONFIG_ESP_TASK_WDT_EN=n
CONFIG_ESP_TASK_WDT_INIT=n

# Main task stack size
CONFIG_ESP_MAIN_TASK_STACK_SIZE=10000

# Reduce log overhead during benchmark
CONFIG_LOG_DEFAULT_LEVEL_WARN=y

# Enable PSRAM
CONFIG_SPIRAM=y
CONFIG_SPIRAM_USE_CAPS_ALLOC=y

# Compiler optimizations
CONFIG_COMPILER_OPTIMIZATION_PERF=y
